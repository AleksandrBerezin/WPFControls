<Window
    x:Class="WPFControls.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:WPFControls.ViewModels"
    xmlns:views="clr-namespace:WPFControls.Views"
    Title="MainWindow"
    Width="300"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:MainVM />
    </Window.DataContext>
    <Window.Resources>
        <Image x:Key="AddImage" Source="../Resources/AddImage.png" />
    </Window.Resources>
    <StackPanel>
        <views:FilesListControl FilesCollection="{Binding FilesList}" RemoveCommand="{Binding RemoveFileCommand}" />
        <Button
            Width="22"
            Height="22"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Background="White"
            BorderThickness="0"
            Command="{Binding AddFileCommand}"
            Content="{StaticResource AddImage}" />
    </StackPanel>
</Window>
