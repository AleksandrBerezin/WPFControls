<UserControl
    x:Class="WPFControls.Views.FileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Control"
    MinHeight="20"
    MaxHeight="20"
    d:DesignHeight="20"
    d:DesignWidth="300"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Image x:Key="CloseImage" Source="../Resources/CloseImage.png" />
    </UserControl.Resources>
    <DockPanel>
        <TextBox
            Padding="1,1,0,0"
            BorderThickness="0"
            IsReadOnly="True"
            Text="{Binding ElementName=Control, Path=FileName}" />
        <Button
            Width="20"
            Padding="2"
            HorizontalAlignment="Right"
            Background="White"
            BorderThickness="0"
            Content="{StaticResource CloseImage}" />
    </DockPanel>
</UserControl>
